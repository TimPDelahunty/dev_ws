<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

<!--Included Files-->
<xacro:include filename="inertial_macros.xacro"/>
   
<!--<xacro:include filename="camera.xacro"/> -->


<!--Constants -->
<xacro:property name="platform_radius" value="0.05"/>
<xacro:property name="platform_length" value="0.04"/>
<xacro:property name="tilt_platform_offset" value="0.07"/>


<!--Material Defineitions-->
<material name="white">
    <color rgba="1 1 1 1"/>
</material>

<material name="orange">
    <color rgba="1 0.3 0.1 1"/>
</material>

<material name="blue">
    <color rgba="0.2 0.2 1 1"/>
</material>

<material name="black">
    <color rgba="0 0 0 1"/>
</material>

<!-- Base link -->

<link name="base_link">
</link>

    <!-- BASE_FOOTPRINT LINK -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>


<!-- Mounting Pole LINK -->

    <joint name="mounting_pole_joint" type="fixed">
        <parent link="base_link"/>
        <child link="mounting_pole"/>
        <origin xyz="0 0 0"/>
    </joint>

  <link name="mounting_pole">
    <visual>
        <origin xyz = "0 0 0"/>
        <geometry>
            <cylinder length="2" radius="${platform_radius}" />
        </geometry>
        <material name="black"/>
    </visual>

    <collision>
        <origin xyz ="0 0 0"/>
        <geometry>
            <cylinder length="2" radius="${platform_radius}" />
        </geometry>

    </collision>

    <xacro:inertial_cylinder mass = "0.1" length="2" radius="${platform_radius}">
        <origin xyz=" 0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<gazebo reference="mounting_pole">
    <material>Gazebo/Blue</material>
</gazebo>




<!-- Servo Motor Pan Platform (Bottom) -->


<joint name="pan_platform_joint" type="continuous">
    <parent link="base_link"/>
    <child link="pan_platform"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<link name="pan_platform">
    <visual>
        <geometry>
            <cylinder length="${platform_length}" radius="${platform_radius}" />
        </geometry>
        <material name="blue"/>
    </visual>

    <collision>
        <geometry>
            <cylinder length="${platform_length}" radius="${platform_radius}" />
        </geometry>

    </collision>

    <xacro:inertial_cylinder mass = "0.1" length="${platform_length}" radius="${platform_radius}">
        <origin xyz=" 0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<gazebo reference="pan_platform">
    <material>Gazebo/Blue</material>
</gazebo>




<!-- Servo Motor Tilt Platform (Bottom) -->

<joint name="tilt_platform_joint" type="revolute">
    <parent link="pan_platform"/>
    <child link="tilt_platform"/>

    <origin xyz="0 0 ${tilt_platform_offset}" rpy="-${pi/2} 0 0"/>
    <axis xyz = "0 0 -1"/>
    <limit lower = "-${pi/4}" upper ="${pi/2}" velocity = "100" effort="100"/>
   
</joint>

<link name="tilt_platform">
    <visual>
        <geometry>
            <cylinder length="${platform_length}" radius="${platform_radius}" />
        </geometry>
        <material name="orange"/>
    </visual>

    <collision>
        <geometry>
            <cylinder length="${platform_length}" radius="${platform_radius}" />
        </geometry>
    </collision>

    <xacro:inertial_cylinder mass = "0.1" length="${platform_length}" radius="${platform_radius}">
        <origin xyz=" 0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
    
</link>

<gazebo reference="tilt_platform">
    <material>Gazebo/Orange</material>
</gazebo>




</robot>
